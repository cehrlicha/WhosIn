<div id="wrapper">


        <!-- Page Content -->
<div id="page-content-wrapper">
<div class="container-fluid-right container-fluid-left">
<div class="row">


    <div banner_form_pack>
      <div class="event_banner_div">
      <!-- show event picture if it already exists -->
        <% if @event.photo.blank?  %>
          <% @event.remote_photo_url = "http://via.placeholder.com/400x300"%>
        <% end %>
          <div class="banner_edit" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path @event.photo , height: 300, width: 400, crop: :fill %>')">
              <div class="upload_image">
                <%= simple_form_for(@event) do |f| %>
                  <%= f.input :photo, class: "btn btn-default", label: false %>
                  <%= f.input :photo_cache, as: :hidden %>
                  <button type="submit" class="btn btn-danger">
                      Save
                  </button>
              <% end %>
              </div>
          </div>

      </div>

      <div class="venue-informations_edit">

        <form action="/events/<%=@event.id%>" method="post" >
          <input type="hidden" name="_method" value="patch" class="form-control">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <div class="form-inline">
            <input type="text" name="event[title]" class="form-control" value="<%= @event.title %>" placeholder="Cooles Event EVER">
            <div class='input-group date' id='datetimepicker6'>
              <input type='text' class="form-control" name="event[start_date]" value="<%= @event.start_date %>" placeholder="<%= @event.start_date %>" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
            <input type="text" name="event[address]" class="form-control" value="<%= @event.address %>" placeholder="Your address">
            <input type="submit" class="btn btn-default" value="Save" class="venue_info_element">
          </div>


          <div class="form-inline choice_buttons">
            <%= link_to "See event", event_path(@event), class: "btn btn-default btn-info" %>
            <%= link_to "Delete event", event_path(@event), method: :delete, class: "btn btn-default btn-danger" %>
          </div>
        </form>


      </div>
    </div>

<div class="container">


  <div class="row margin description_padding" style="margin-top: -150px;">
    <div class="col-xs-12 col-sm-6" style="padding-left: 0px">
    <div class="spots-box">

      <div class="venue-informations-free-spots ">

        <p><em>Add your free spots</em></p>
        <div>
         <button class="free-spots free-spots-counter" id="spot-counter"><strong>
          <%= render "free_spots", event: @event %>
        </strong></button>

        <button class="free-spots-blue"><%= link_to addfreespot_event_path(@event), method: :post, remote: true do %> <i class="fa fa-plus" style="color: white"></i> <% end %></button>
        <button class="free-spots-blue"><%= link_to deletefreespot_event_path(@event), method: :post, remote: true do %> <i class="fa fa-minus" style="color: white"></i> <% end %></button>
        </div>
      </div>

  <!-- Trigger the modal with a button -->
      <div class="event-friend-invited">
      <p><em>Invite your friends</em></p>
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#invite">Invite Friends</button>
            <% @event.notresponded.each do |guest| %>
            <span id="invited-friend"> <%= link_to event_invitation_path(@event, guest.invitation(@event)), method: :delete do %> <%= image_tag guest.facebook_picture_url, class: "avatar-large invited-friend-avatar", "data-toggle" => "tooltip", "data-placement"=>"left", "title" =>"#{guest.first_name}"%><i class="fa fa-trash hidden" id="invited-friend-delete"></i><% end %> </span>
            <% end %>
      </div>



      <div class="modal fade" id="invite" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                      </button>
                       <h4 class="modal-title" id="myModalLabel">Invite your friends</h4>
                  </div>
                  <div class="modal-body">
                      <div role="tabpanel">
                          <!-- Nav tabs -->
                          <ul class="nav nav-tabs" role="tablist">
                              <li role="presentation" class="active"><a href="#fbfriend" aria-controls="fbfriend" role="tab" data-toggle="tab">Facebook</a>

                              </li>
                              <li role="presentation"><a href="#emailfriends" aria-controls="emailfriends" role="tab" data-toggle="tab">Email</a>

                              </li>
                          </ul>

                          <!-- Tab panes -->
                          <div class="tab-content">
                              <div role="tabpanel" class="tab-pane active" id="fbfriend">
                                <form action="<%= event_invitations_path(@event) %>" method="POST" class="form">
                                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                                  <ul class="list-group">
                                    <% @fb_friends.each do |friend| %>
                                      <% if @event.guests.include? friend %>
                                        <li class="list-group-item">
                                          <input type="checkbox" disabled checked name="friends[]" value=<%= friend["id"] %> id="friend" />
                                          <label for="friend">
                                            <%= image_tag friend.facebook_picture_url, class: "avatar picture"%>
                                            <%= friend.first_name %> (invited)
                                          </label>
                                        </li>
                                      <% else %>
                                        <li class="list-group-item">
                                          <input type="checkbox" name="friends[]" value=<%= friend["id"] %> id="friend" />
                                          <label for="friend"><%= image_tag friend.facebook_picture_url, class: "avatar picture"%><%= friend.first_name %></label>
                                        </li>
                                      <% end %>
                                    <% end %>
                                   </ul>
                                    <div class="modal-footer">
                                      <input type="submit" value="Invite" class="btn btn-info" >
                                  </div>
                                </form>
                              </div>

                              <div role="tabpanel" class="tab-pane" id="emailfriends">
                                 <div>
                                  <%= simple_form_for @user, :url => email_friend_path, wrapper: :inline_form, html: {class: "form-inline"} do |f| %>
                                    <%= f.input :first_name, {:placeholder => 'Max'} %>
                                    <%= f.input :last_name, {:placeholder => 'Moritz'} %>
                                    <%= f.input :email, {:placeholder => 'bob@mgail.com'} %>
                                    <%= f.hidden_field :event_id, value: @event.id %>


                                    <button type="submit" class="btn">
                                      <i class="fa fa-plus" aria-hidden="true" style="color: white"></i>
                                    </button>

                                  <% end %>
                                </div>

                                <form action="<%= event_invitations_path(@event) %>" method="POST" class="form">
                                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                                  <ul class="list-group">
                                    <% @users.each do |friend| %>
                                      <% if @event.guests.include? friend %>
                                        <li class="list-group-item">
                                          <input type="checkbox" disabled checked name="friends[]" value=<%= friend["id"] %> id="friend" />
                                          <label for="friend">
                                            <%= image_tag friend.facebook_picture_url, class: "avatar picture"%>
                                            <%= friend.first_name %> (invited)
                                          </label>
                                        </li>
                                      <% else %>
                                        <li class="list-group-item">
                                          <input type="checkbox" name="friends[]" value=<%= friend["id"] %> id="friend" />
                                          <label for="friend"><%= image_tag friend.facebook_picture_url, class: "avatar picture"%><%= friend.first_name %></label>
                                        </li>
                                      <% end %>
                                    <% end %>
                                   </ul>
                                    <div class="modal-footer">
                                      <input type="submit" value="Invite" class="btn btn-danger" >
                                  </div>
                                </form>
                              </div>

                          </div>
                      </div>
                  </div>

              </div>
          </div>
      </div>

    </div>
    </div>

    <div class="col-xs-12 col-sm-6" style="padding-right: 0px">

      <div class="event_description description_padding text-center description-box">
        <%= simple_form_for @event do |f| %>
          <%= f.input :description, :input_html => {:style=> 'height: 100px'}%>
          <button type="submit" class="btn btn-default">
              <i class="icon-save" style="color: white"></i> save
          </button>
        <% end %>
      </div>

    </div>
  </div>

  <div class="row margin">
    <div class="col-xs-12 col-sm-12 menu-box">

      <div class="flex-form menu_category">
        <div class="menu_title">
          <h5>APPETIZER</h5>
        </div>
        <div >
          <div class="menu_items_box">
            <%= simple_form_for [@event, @menu_item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

                <%= f.input :name, {:placeholder => 'dish'} %>
                <%= f.hidden_field :bring, value: false %>
                <%= f.hidden_field :category, value: "Appetizer" %>

                <%= f.hidden_field :event_id, value: @event.id  %>
                <button type="submit" class="btn">
                  <i class="fa fa-plus" aria-hidden="true" style="color: white"></i>
                </button>
            <% end %>
            <% @event.menu_items.each do |item|  %>
              <% if (item.category == "Appetizer") && !item.invitation.nil? %>
                  <%= render 'events/menu_element', event: @event, item: item%>
              <% end %>
            <% end %>

          </div>

        </div>
      </div>

      <div class="flex-form menu_category">
        <div class="menu_title">
          <h5>MAIN</h5>
        </div>
        <div>
          <div class="menu_items_box">
          <%= simple_form_for [@event, @menu_item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

                <%= f.input :name, {:placeholder => 'dish'} %>
                <%= f.hidden_field :bring, value: false %>
                <%= f.hidden_field :category, value: "Main" %>

                <%= f.hidden_field :event_id, value: @event.id  %>

                <button type="submit" class="btn">
                  <i class="fa fa-plus" aria-hidden="true" style="color: white"></i>
                </button>

          <% end %>
            <% @event.menu_items.each do |item|  %>
            <% if (item.category == "Main") && !item.invitation.nil? %>
                <%= render 'events/menu_element', event: @event, item: item%>
            <% end %>
            <% end %>
          </div>

        </div>
      </div>

      <div class="flex-form menu_category ">
        <div class="menu_title">
          <h5>DESSERT</h5>
        </div>
        <div>
          <div class="menu_items_box">
            <%= simple_form_for [@event, @menu_item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

            <%= f.input :name, {:placeholder => 'dish'} %>
            <%= f.hidden_field :bring, value: false %>
            <%= f.hidden_field :category, value: "Dessert" %>

            <%= f.hidden_field :event_id, value: @event.id  %>

            <button type="submit" class="btn">
              <i class="fa fa-plus" aria-hidden="true" style="color: white"></i>
            </button>

            <% end %>

            <% @event.menu_items.each do |item|  %>
            <% if (item.category == "Dessert") && !item.invitation.nil? %>
                <%= render 'events/menu_element', event: @event, item: item%>
            <% end %>
            <% end %>
          </div>
          <div>

          </div>
        </div>
      </div>

      <div class="flex-form menu_category">
        <div class="menu_title">
          <h5>TO BRING</h5>
        </div>
        <div class=" menu_items_box " id="to-bring-form">
          <%= render 'menu_items/form', event: @event, menu_item: @menu_item %>
        </div>
      </div>

      <div class="event_page_menu_choices">
        <div class="required_items" id="menu_snacks">
         <% @event.missing.each do |bring_item|  %>
          <%= render 'menu_items/to_bring_form', event: @event, item: bring_item %>
        <% end %>
       </div>
      </div>

    </div>
  </div>

 </div>

 </div>

</div>
</div>
</div>




