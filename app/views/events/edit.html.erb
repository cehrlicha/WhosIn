<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#" id="sidebar_title">
                        EVENT NAME
                    </a>
                </li>
                <li>
                    <a href="#">Dinner Dashboard</a>
                </li>
                <li>
                    <a href="#">Dinner Pictures</a>
                </li>
                <li>
                    <a href="#">Payments</a>
                </li>
                <li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <div class="container-fluid">
            <div class="row">
              <div id="colum_media_corretion" class="col-lg-12">
                <div class="flex-horizontal">
                  <div class="event_page_image">
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                  <div class="event_page_informations">
                    <div class="flex-between">
                      <input type="text" class="venue-informations text_hover text_hover form-control" id="menu_snacks" placeholder="Venu informations" >



                      <div class="event-friend text_hover text_hover">
                        <%= simple_form_for @event do |f| %>
                          <%= f.input :description %>
                            <%= f.submit 'Save' %>
                        <% end %>
                      </div>

                    </div>
                  </div>
                </div>
                <div class="flex-horizontal">
                  <div class="event_page_menu">
                    <div class=" text-center">
                      <h3> <%= @event.id %> <%= @event.title %> </h3>
                    </div>
                    <div class="menu_meals">
                      <div class="event-friend text_hover text_hover">
                        <%= simple_form_for [@event, @menu_item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

                            <%= f.input :name, {:placeholder => 'name'} %>
                            <%= f.input :category, collection: ["Appetizer", "Snacks", "Drinks", "Main", "Dessert"] %>
                            <%= f.input :quantity, {:placeholder => 'quantity'} %>
                            <%= f.hidden_field :event_id, value: @event.id  %>

                            <%= f.submit 'Add' %>

                        <% end %>

                        <% @event.menu_items.each do |item|  %>
                          <% if item.category == "Main" %>
                          <%= simple_form_for [@event, item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

                              <%= f.input :name, {:placeholder => 'name'} %>
                              <%= f.input :category, {:placeholder => 'category'} %>
                              <%= f.input :quantity, {:placeholder => 'quantity'} %>
                              <%= f.button :submit%>
                          <% end %>
                          <% end %>

                              <%= link_to 'destroy', event_menu_item_path(@event, item),method: :delete, id: item.id, event_id: @event.id %>
                        <% end %>
                      </div>

                      <div class="menu_others flex-between">
                        <!-- <input type="text" class="menu_drinks text_hover form-control" id="menu_snacks" placeholder="menu drinks" > -->
                        <div class="menu_drinks text_hover form-control" id="menu_snacks">
                         <% @event.menu_items.each do |item|  %>
                          <% if item.category == "Drink" %>
                          <%= simple_form_for [@event, item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

                              <%= f.input :name, {:placeholder => 'name'} %>
                              <%= f.input :category, {:placeholder => 'category'} %>
                              <%= f.input :quantity, {:placeholder => 'quantity'} %>
                              <%= f.button :submit%>
                          <% end %>
                          <%= link_to 'destroy', event_menu_item_path(@event, item),method: :delete, id: item.id, event_id: @event.id %>
                          <% end %>


                        <% end %>
                        </div>
                        <!-- <input type="text" class="menu_snacks text_hover form-control" id="menu_snacks" placeholder="menu snacks" > -->
                        <div class="menu_snacks text_hover form-control" id="menu_snacks">
                         <% @event.menu_items.each do |item|  %>
                          <% if item.category == "Snack" %>
                          <%= simple_form_for [@event, item], wrapper: :inline_form, html: {class: "form-inline"} do |f| %>

                              <%= f.input :name, {:placeholder => 'name'} %>
                              <%= f.input :category, {:placeholder => 'category'} %>
                              <%= f.input :quantity, {:placeholder => 'quantity'} %>
                              <%= f.button :submit%>
                          <% end %>
                          <%= link_to 'destroy', event_menu_item_path(@event, item),method: :delete, id: item.id, event_id: @event.id %>
                          <% end %>


                        <% end %>
                        </div>

                      </div>

                    </div>
                  </div>
                  <div class="event_page_menu_choices">
                    <div class="choice_buttons flex-between">
                      <%= social_share_button_tag("Share") %>
                      <button type="button" class="imout_btn btn btn-danger">See event</button>
                    </div>
                      <input type="text" class="required_items text_hover form-control" id="menu_snacks" placeholder="What should your friend bring ?">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <% content_for :after_js do %>

    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <% end %>

