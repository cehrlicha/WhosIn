<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#" id="sidebar_title">
                        EVENT NAME
                    </a>
                </li>
                <li>
                    <a href="#">Dinner Dashboard</a>
                </li>
                <li>
                    <a href="#">Dinner Pictures</a>
                </li>
                <li>
                    <a href="#">Payments</a>
                </li>
                <li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div id="colum_media_corretion" class="col-lg-12 text-center">

                      <div class="container">
                      <div class="col-xs-12 col-sm-4">
                        <a href="#menu-toggle" class="btn btn-warning text-left" id="menu-toggle"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                          <div class="row">
                            <div class="col-xs-12">

                              <div class="text-center">
                                  <h4 id="event-title"> <%= @event.title %> </h4>
                                  <% @event.managers.each do |guest| %>
                                     <%= image_tag guest.facebook_picture_url, class: "avatar-large picture"%>
                                  <% end %>
                                  invited you

                                <p><em>From <%= Date::DAYNAMES[@event.start_date.wday] %>
                                 <%= @event.start_date.strftime("%d %B")  %>
                                 <%= @event.start_date.strftime("%H:%M") %></em></p>

                                <p><em>To <%= Date::DAYNAMES[@event.end_date.wday] %>
                                 <%= @event.end_date.strftime("%d %B") %>
                                  <%= @event.end_date.strftime("%H:%M") %></em></p>
                                <br>
                                <p><%= @event.address %></p>
                              </div>
                              </div>

                            <div class="col-xs-12">
                              <div class="choice_buttons flex-between border">
                                <% if @event.managers.include? current_user %>
                                  <div id= "edit-button">
                                    <%= link_to "Edit", edit_event_path(@event), class: "btn-lg btn-warning edit-button" %>
                                  </div>
                                <% else %>
                                  <%= link_to "I'm in", event_invitation_path(@event, @invitation, { :button => "in" }), method: :patch, class: "btn btn-success imin-btn", id: "iaminbutton" %>
                                  <%= link_to "I'm out", event_invitation_path(@event, @invitation, { :button => "out" }), :method => :patch, class: "btn btn-danger imout-btn" %>
                                <% end %>
                              </div>
                            </div>

                            <div class="row">
                            <div class="col-xs-12">
                              <div class="venue-informations-free-spots boxed">
                                <% @event.coming.each do |guest| %>
                                  <%= image_tag guest.facebook_picture_url, class: "avatar-large"%>
                                <% end %>
                                <% @event.free_spots.times do %>
                                  <button class="free-spots"></button>
                                <% end %>
                              </div>
                            </div>

                            <div class="col-xs-12">
                              <div class="event-friend-invited boxed">
                                <% @event.notresponded.each do |guest| %>
                                <%= image_tag guest.facebook_picture_url, class: "avatar-large"%>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>


                        <div class="col-xs-12 col-sm-4">
                          <div class="row">


                           <div class="col-xs-12">
                              <% if @event.photo.blank?  %>
                                <% @event.remote_photo_url = "http://via.placeholder.com/400x300"%>
                              <% end %>
                              <div class="event_page_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                               url('<%= cl_image_path @event.photo, height: 300, width: 400, crop: :fill %>')">
                              </div>
                            </div>
                          </div>
                        </div>


                        <div class="col-xs-12 col-sm-2">
                          <div class="sidebar-nav">
                              <ul>
                                <li>
                                  <a href="#summary">
                                    <i class="fa fa-info-circle"></i>
                                  </a>
                                </li>
                                <li>
                                  <a href="#favorite-movies">
                                    <i class="fa fa-file-video-o"></i>
                                  </a>
                                </li>
                                <li>
                                  <a href="#footer">
                                    <i class="fa fa-life-ring"></i>
                                  </a>
                                </li>
                              </ul>
                              </div>
                        </div>
                        </div>
                    </div>


                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <% content_for :after_js do %>

    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <% end %>
