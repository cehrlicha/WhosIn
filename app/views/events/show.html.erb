<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#" id="sidebar_title">
                        EVENT NAME
                    </a>
                </li>
                <li>
                    <a href="#">Dinner Dashboard</a>
                </li>
                <li>
                    <a href="#">Dinner Pictures</a>
                </li>
                <li>
                    <a href="#">Payments</a>
                </li>
                <li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <div class="container-fluid">
            <div class="row">
              <div id="colum_media_corretion" class="col-lg-12">
                <div class="flex-horizontal">
                  <div class="event_page_image">
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                  <div class="event_page_informations">
                    <div class="flex-between">
                      <div class="venue-informations">
                        <p><%= Date::DAYNAMES[@event.start_date.wday] %> <%= @event.start_date.to_date  %></p>
                        <br>
                        <p><%= @event.address %></p>
                      </div>
                      <div class="event-friend">
                        <p><%= @event.description %></p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="flex-horizontal">
                  <div class="event_page_menu">
                    <div class="menu_title text-center">
                      <h3> MENU </h3>
                    </div>
                    <div class="menu_meals">
                      <div class="menu_main">
                        MAIN
                      </div>
                      <div class="menu_others flex-between">
                        <div class="menu_drinks">
                          DRINKS
                        </div>
                        <div class="menu_snacks">
                          SNACKS
                        </div>
                      </div>

                    </div>
                  </div>
                  <div class="event_page_menu_choices">
                    <div class="choice_buttons flex-between">
                      <!-- <button type="button" class="imin_btn btn btn-default">Im'in</button> -->
                      <%= link_to "I'm in", event_invitation_path(@event, @invitation, { :button => "in" }), method: :patch, class: "btn btn-default imin-btn" %>
                      <%= link_to "I'm out", event_invitation_path(@event, @invitation, { :button => "out" }), :method => :patch, class: "btn btn-default imout-btn" %>
                    </div>
                    <div class="required_items text-center">
                      Choose something to bring
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <% content_for :after_js do %>

    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <% end %>

