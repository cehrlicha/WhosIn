<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#" id="sidebar_title">
                        EVENT NAME
                    </a>
                </li>
                <li>
                    <a href="#">Dinner Dashboard</a>
                </li>
                <li>
                    <a href="#">Dinner Pictures</a>
                </li>
                <li>
                    <a href="#">Payments</a>
                </li>
                <li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <div class="container-fluid">
            <div class="row">
              <div id="colum_media_corretion" class="col-lg-12">
                <div class="flex-horizontal">
                  <div class="event_page_image">
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                  <div class="event_page_informations">
                    <div class="flex-between">
                      <div class="venue-informations">
                       <p id="venue-informations-month">  <%= @event.start_date.strftime("%b")  %> </p>
                      <p id="venue-informations-date"><%= @event.start_date.strftime("%d")  %></p>

                        <p><em>From <%= Date::DAYNAMES[@event.start_date.wday] %>
                         <%= @event.start_date.strftime("%d %B")  %>
                         <%= @event.start_date.strftime("%H:%M") %></em></p>

                        <p><em>To <%= Date::DAYNAMES[@event.end_date.wday] %>
                         <%= @event.end_date.strftime("%d %B") %>
                          <%= @event.end_date.strftime("%H:%M") %></em></p>
                        <br>
                        <p><%= @event.address %></p>
                      </div>
                      <div class="event-friend">
                        <p><%= @event.description %></p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="flex-horizontal">
                  <div class="event_page_menu">
                    <div class="menu_title text-center">
                      <h3> MENU </h3>
                    </div>
                    <div class="menu_meals">
                      <div class="menu_main">
                      <% @event.menu_items.each do |item|  %>
                          <% if (item.category == "Appetizer") && !item.invitation.nil? %>
                          <p><span><%= item.category %> | </span><%= item.name %></p>
                          <% end %>
                           <% if (item.category == "Main") && !item.invitation.nil? %>
                          <p><span><%= item.category %> | </span><%= item.name %></p>
                         <% if (item.category == "Dessert") && !item.invitation.nil? %>
                          <p><span><%= item.category %> | </span><%= item.name %></p>
                          <% end %>
                          <% end %>
                      <% end %>
                      </div>
                      <div class="menu_others flex-between">
                        <div class="menu_drinks">
                        <h3>DRINKS</h3>
                        <% @event.menu_items.each do |item|  %>
                          <% if item.category == "Drink" && !item.invitation.nil? %>
                          <p><%= item.name %> x<%= item.quantity %></p>
                          <% end %>
                      <% end %>
                        </div>
                        <div class="menu_snacks">
                        <h3>SNACKS</h3>
                        <% @event.menu_items.each do |item|  %>
                          <% if item.category == "Snack" && !item.invitation.nil? %>
                          <p><%= item.name %></p>
                          <% end %>
                      <% end %>
                        </div>
                      </div>

                    </div>
                  </div>
                  <div class="event_page_menu_choices">
                    <div class="choice_buttons flex-between">
                      <!-- <button type="button" class="imin_btn btn btn-default">Im'in</button> -->
                      <%= social_share_button_tag("Share") %>

                      <%= link_to "Edit", edit_event_path(@event), class: "btn btn-default imin-btn" %>
                    </div>
                    <div class="required_items text-center">
                      <p>Choose something to bring</p>
                      <% @event.menu_items.each do |item|  %>
                          <% if item.invitation.nil? %>
                          <%= link_to "#{item.name}  x#{item.quantity}", brings_item_path(@event, item), class: "btn btn-default btn-success" %>
                          <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <% content_for :after_js do %>

    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <% end %>

