<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#" id="sidebar_title">
                        EVENT NAME
                    </a>
                </li>
                <li>
                    <a href="#">Dinner Dashboard</a>
                </li>
                <li>
                    <a href="#">Dinner Pictures</a>
                </li>
                <li>
                    <a href="#">Payments</a>
                </li>
                <li>
            </ul>
        </div>

        <div id="wrapper2">

          <div id="sidebar-wrapper2">

            <div class="required_items text-center">
              <p>Choose something to bring</p>
              <% @event.menu_items.each do |item|  %>
              <% if item.invitation.nil? %>
              <%= link_to "#{item.name}  x#{item.quantity}", event_brings_item_path(@event, item), class: "btn btn-default btn-success" %>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
<div id="page-content-wrapper">
<div class="container-fluid-right container-fluid-left">
<div class="row">
<div class="col-lg-12">

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">

      <div class="venue-informations text_hover text_hover">
        <div class="venue-informations-date">
          <div class=" text-center">
              <h4> <%= @event.title %> </h4>
              <% @event.managers.each do |guest| %>
                 <%= image_tag guest.facebook_picture_url, class: "avatar-large picture"%>
              <% end %>
              invited you
          </div>
            <p><em>From <%= Date::DAYNAMES[@event.start_date.wday] %>
             <%= @event.start_date.strftime("%d %B")  %>
             <%= @event.start_date.strftime("%H:%M") %></em></p>

            <p><em>To <%= Date::DAYNAMES[@event.end_date.wday] %>
             <%= @event.end_date.strftime("%d %B") %>
              <%= @event.end_date.strftime("%H:%M") %></em></p>
            <br>
            <p><%= @event.address %></p>
        </div>
        <div class="choice_buttons flex-between">
          <% if @event.managers.include? current_user %>
            <%= social_share_button_tag("Share") %>
            <%= link_to "Edit", edit_event_path(@event), class: "btn btn-default imin-btn" %>
          <% else %>
            <%= link_to "I'm in", event_invitation_path(@event, @invitation, { :button => "in" }), method: :patch, class: "btn btn-success imin-btn", id: "iaminbutton" %>
            <%= link_to "I'm out", event_invitation_path(@event, @invitation, { :button => "out" }), :method => :patch, class: "btn btn-danger imout-btn" %>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col-xs-12 col-sm-6">

      <div class="event_page_image">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6">

      <div class="venue-informations-free-spots">
        <% @event.coming.each do |guest| %>
          <%= image_tag guest.facebook_picture_url, class: "avatar-large"%>
        <% end %>
        <% @event.free_spots.times do %>
          <button class="free-spots"></button>
        <% end %>
      </div>

    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="event-friend-invited">
        <% @event.notresponded.each do |guest| %>
        <%= image_tag guest.facebook_picture_url, class: "avatar-large"%>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12">

      <div class="event_description">
          <div class= "event-friend-description">
            <p><%= @event.description %></p>
          </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <div class="flex-form">
        <div class="menu_title">
          <h4>APPETIZER</h4>
        </div>
        <div>
          <% @event.menu_items.each do |item|  %>
              <% if (item.category == "Appetizer") && !item.invitation.nil? %>
              <p><span></span><%= item.name %></p>
              <% end %>
          <% end %>
        </div>
      </div>
      <div class="flex-form">
        <div class="menu_title">
          <h4>MAIN</h4>
        </div>
        <div>
          <% @event.menu_items.each do |item|  %>
            <% if (item.category == "Main") && !item.invitation.nil? %>
              <p><span></span><%= item.name %></p>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="flex-form">
        <div class="menu_title">
          <h4>DESSERT</h4>
        </div>
        <div>
          <% @event.menu_items.each do |item|  %>
            <% if (item.category == "Dessert") && !item.invitation.nil? %>
              <p><span></span><%= item.name %></p>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12">
      FEED
    </div>
  </div>


</div>

</div>
</div>
</div>
</div>


        <!-- /#page-content-wrapper -->

    <!-- /#wrapper -->

    <!-- jQuery -->
    <% content_for :after_js do %>

    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <script>
    $("#menu-toggle2").click(function(e) {
        e.preventDefault();
        $("#wrapper2").toggleClass("toggled");
    });
    </script>
    <script>
    $("#iaminbutton").click(function(e) {
        e.preventDefault();
        $("#wrapper2").toggleClass("toggled");
    });
    </script>
    <% end %>

