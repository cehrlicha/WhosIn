<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#" id="sidebar_title">
                        EVENT NAME
                    </a>
                </li>
                <li>
                    <a href="#">Dinner Dashboard</a>
                </li>
                <li>
                    <a href="#">Dinner Pictures</a>
                </li>
                <li>
                    <a href="#">Payments</a>
                </li>
                <li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <div class="container-fluid">
            <div class="row">
              <div id="colum_media_corretion" class="col-lg-12">
                <div class="flex-horizontal">
                  <div class="event_page_image">
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                  <div class="event_page_informations">
                    <div class="flex-between">
                      <input type="text" class="venue-informations text_hover text_hover form-control" id="menu_snacks" placeholder="Venu informations" >
                      <%= simple_form_for 'Venu informations', @event, :method => :get, :remote => true %>

                      <input type="text" class="event-friend text_hover text_hover form-control" id="menu_snacks" placeholder="Event description" >
                    </div>
                  </div>
                </div>
                <div class="flex-horizontal">
                  <div class="event_page_menu">
                    <div class=" text-center">
                      <h3> MENU </h3>
                    </div>
                    <div class="menu_meals">
                      <input type="text" class="menu_main text_hover text_hover form-control" id="menu_snacks" placeholder="menu main" >
                      <div class="menu_others flex-between">
                        <input type="text" class="menu_drinks text_hover form-control" id="menu_snacks" placeholder="menu drinks" >
                        <input type="text" class="menu_snacks text_hover form-control" id="menu_snacks" placeholder="menu snacks" >
                      </div>

                    </div>
                  </div>
                  <div class="event_page_menu_choices">
                    <div class="choice_buttons flex-between">
                      <button type="button" class="imin_btn btn btn-success">Im'in</button>
                      <button type="button" class="imout_btn btn btn-danger">Im'out</button>
                    </div>
                    <div class="required_items text-center">
                      What should your friend bring ?
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <% content_for :after_js do %>

    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <% end %>

