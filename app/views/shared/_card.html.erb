<% if !host %>
<%= link_to event_path(e) do %>
    <div class="my_cards card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path e.photo , height: 300, width: 400, crop: :fit %>');">
     <div class="card-date"><p> <%= Date::DAYNAMES[e.start_date.wday] %></p>
      <p>  <%= e.start_date.strftime("%B %d")  %> </p>
      </div>
        <div class="card-description">
          <h2><%= e.title %></h2>
        </div>
        <%= image_tag e.managers.first.facebook_picture_url, class: "card-user avatar avatar-large"%>
    </div>
  <% end %>

<% else %>

<%= link_to event_path(e) do %>
    <div class="my_cards card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path e.photo , height: 300, width: 400, crop: :fit %>');">
     <div class="card-date"><p> <%= Date::DAYNAMES[e.start_date.wday] %></p>
      <p>  <%= e.start_date.strftime("%B %d")  %> </p>
      </div>
        <div class="card-description">
          <h2><%= e.title %></h2>
        </div>
        <%= image_tag e.managers.sample.facebook_picture_url, class: "card-user avatar avatar-large"%>
    </div>
  <% end %>

<% end %>
